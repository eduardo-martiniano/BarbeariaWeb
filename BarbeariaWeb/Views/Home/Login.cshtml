@{
    ViewData["Title"] = "Login";
}

<h2>Login</h2>

<form method="post" action="/home/login">
    <div class="form-group">
        <label for="email">Email</label>
        <input type="text" name="email" value="" class="form-control" id="email" placeholder="Digite o seu email">

    </div>
    <div class="form-group">
        <label for="senha">Senha</label>
        <input type="password" name="senha" value="" class="form-control" id="senha" placeholder="Digite sua senha">

    </div>
    <button type="submit" class="btn btn-primary">Entrar</button>
</form>
